doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
        title E-Store
        link(href="./css/style.css", rel="stylesheet")
    body
        include header.pug
        main.px-2(class='sm:px-4 py-5')
            div(class="md:columns-3 gap-5")
                each card in products
                    .w-full.bg-white.rounded-lg.shadow-md
                        a(href='#')
                            img.p-8.rounded-t-lg(src= card.thumbnail alt= card.name)
                        .px-5.pb-5
                            a(href='#')
                                h5.text-xl.font-semibold.tracking-tight.text-gray-900(class='dark:text-white')= card.name
                            .flex.items-center.mb-5(class='mt-2.5')
                                - let i = 0;
                                while i < card.rating
                                    svg.w-5.h-5.text-yellow-300(aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                                        title= ++i
                                        path(d='M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z')

                                while i < 5
                                    svg.w-5.h-5.text-yellow-300(aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                                        title= ++i
                                        path(fill='#00000070' d='M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z')


                                span.bg-blue-100.text-blue-800.text-xs.font-semibold.mr-2.rounded.ml-3(class='px-2.5 py-0.5 dark:bg-blue-200 dark:text-blue-800')= card.rating
                            .flex.items-center.justify-between
                                span.text-3xl.font-bold.text-gray-900(class='dark:text-white') $#{card.price}
                                a.text-white.bg-blue-700.font-medium.rounded-lg.text-sm.px-5.text-center(href=`?add-to-cart=${card.id}` class='hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800') Add to cart
        script(src='./js/flowbite.min.js')
